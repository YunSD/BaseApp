<Page x:Class="BaseApp.Upms.Views.FolderViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:BaseApp.Resource.Controls;assembly=BaseApp.Resource"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="UserView"
      d:DesignHeight="450"
      d:DesignWidth="1000"
      Background="Transparent"
      ScrollViewer.CanContentScroll="False"
      mc:Ignorable="d">
    <StackPanel Margin="0,0,0,24">
        <TextBlock Margin="20,32,0,17" FontSize="28" FontWeight="Bold" Text="{Binding ViewModel.Title}" />
        <controls:GalleryNavigationPresenter Margin="0" Padding="0" ItemsSource="{Binding ViewModel.NavigationCards, Mode=OneWay}" />
    </StackPanel>
</Page>
